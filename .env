# Environment Configuration for Work Redesign Platform

# =================================
# Application Settings
# =================================
NODE_ENV=development
APP_NAME=Work Redesign Platform
APP_VERSION=1.0.0

# =================================
# Server Configuration
# =================================
API_PORT=4000
WEB_PORT=3000
API_URL=http://localhost:4000
WS_URL=ws://localhost:4000
CORS_ORIGIN=http://localhost:3000

# =================================
# Database Configuration
# =================================
DB_USER=workredesign
DB_PASSWORD=password123
DB_NAME=work_redesign
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://workredesign:password123@localhost:5432/work_redesign

# =================================
# Redis Configuration
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# =================================
# Authentication & Security
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-key
BCRYPT_ROUNDS=12

# SK SSO Configuration
SK_SSO_URL=https://sso.sk.com
SK_SSO_CLIENT_ID=your-sso-client-id
SK_SSO_CLIENT_SECRET=your-sso-client-secret

# =================================
# AI & External APIs
# =================================
# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20250122
ANTHROPIC_MAX_TOKENS=8000

# OpenAI (Backup)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# =================================
# File Storage (AWS S3)
# =================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
S3_BUCKET=work-redesign-files
S3_ENDPOINT=https://s3.ap-northeast-2.amazonaws.com

# =================================
# Email Service
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@sk.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@sk.com

# =================================
# Monitoring & Analytics
# =================================
# DataDog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=GA-XXXX-X

# =================================
# Feature Flags
# =================================
ENABLE_AI_CHAT=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_PERFORMANCE_TRACKING=true

# =================================
# Performance & Limits
# =================================
MAX_FILE_SIZE_MB=50
MAX_FILES_PER_SESSION=10
MAX_CONCURRENT_SESSIONS=100
AI_REQUEST_TIMEOUT_MS=30000
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =================================
# Development Settings
# =================================
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_SWAGGER=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_LOGS=true

# =================================
# Production Settings (override in production)
# =================================
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_CORS=false
# ENABLE_SWAGGER=false
# ENABLE_DEBUG_LOGS=false