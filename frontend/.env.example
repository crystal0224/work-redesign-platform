# ============================================
# Work Redesign Platform - Frontend Environment Variables
# ============================================
#
# 이 파일을 .env.local로 복사하여 사용하세요:
# cp .env.example .env.local
#
# ============================================

# --------------------------------------------
# API 엔드포인트 (필수 ✅)
# --------------------------------------------
# Backend API URL
# Development: http://localhost:4000
# Production: https://your-backend.railway.app
NEXT_PUBLIC_API_URL=http://localhost:4000

# WebSocket URL
# Development: ws://localhost:4000
# Production: wss://your-backend.railway.app
NEXT_PUBLIC_WS_URL=ws://localhost:4000

# --------------------------------------------
# 앱 설정
# --------------------------------------------
# 앱 이름
NEXT_PUBLIC_APP_NAME=Work Redesign Platform

# 앱 버전
NEXT_PUBLIC_APP_VERSION=1.0.0

# 환경
NEXT_PUBLIC_ENV=development

# --------------------------------------------
# 기능 플래그
# --------------------------------------------
# 파일 업로드 활성화
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# AI 채팅 활성화
NEXT_PUBLIC_ENABLE_AI_CHAT=true

# 칸반 보드 활성화
NEXT_PUBLIC_ENABLE_KANBAN=true

# --------------------------------------------
# 분석 및 모니터링 (선택사항)
# --------------------------------------------
# Google Analytics Tracking ID
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN (에러 모니터링)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry 환경
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# --------------------------------------------
# UI 설정
# --------------------------------------------
# 기본 언어
NEXT_PUBLIC_DEFAULT_LOCALE=ko

# 타임아웃 설정 (밀리초)
NEXT_PUBLIC_API_TIMEOUT=30000

# 최대 파일 크기 (MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# --------------------------------------------
# 개발 도구
# --------------------------------------------
# 디버그 모드
NEXT_PUBLIC_DEBUG=false

# 로그 레벨 (error, warn, info, debug)
NEXT_PUBLIC_LOG_LEVEL=info
