{
  "name": "work-redesign-platform",
  "version": "1.0.0",
  "description": "AI-powered work redesign workshop tool for SK Group managers",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "npm run test:coverage:backend && npm run test:coverage:frontend",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "test:ci": "npm run test:backend && npm run test:frontend && npm run test:e2e",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "cd backend && npm run type-check",
    "type-check:frontend": "cd frontend && npm run type-check",
    "setup": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "migrate": "cd backend && npm run migrate",
    "seed": "cd backend && npm run seed",
    "deploy:dev": "./deploy.sh development deploy",
    "deploy:prod": "./deploy.sh production deploy",
    "pilot:ui-extract": "cd workshop-pilot-system && FRONTEND_URL=http://localhost:3000 npx ts-node 1-ui-crawler/extract-workshop-ui.ts",
    "pilot:real": "cd workshop-pilot-system && npx ts-node run-real-pilot.ts",
    "pilot:real:full": "cd workshop-pilot-system && npx ts-node run-real-pilot-parallel.ts",
    "pilot:report:uiux": "cd workshop-pilot-system && npx ts-node 5-reports/generate-uiux-analysis.ts",
    "pilot:personas": "cd workshop-pilot-system && npx slidev personas-slides.md",
    "pilot:personas:build": "cd workshop-pilot-system && npx slidev build personas-slides.md",
    "pilot:personas:export": "cd workshop-pilot-system && npx slidev export personas-slides.md --format pdf"
  },
  "keywords": [
    "work-redesign",
    "ai",
    "automation",
    "sk-group",
    "workshop",
    "kanban",
    "claude-ai"
  ],
  "author": "SK Academy",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@slidev/cli": "^52.9.1",
    "@slidev/theme-default": "^0.25.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.56.1"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}
